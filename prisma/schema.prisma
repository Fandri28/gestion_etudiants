generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Student {
  matricule  String   @id        // devient la clé primaire
  nom        String
  prenom     String
  filiere    String
  email      String   @unique
  absences   Absence[]   // ← nom de relation au pluriel (bon style)
  createdAt  DateTime @default(now())
}

model Absence {
  id               Int      @id @default(autoincrement())
  studentMatricule String
  student          Student  @relation(fields: [studentMatricule], references: [matricule])
  matiere          String
  date             DateTime
  justification    String?
  type             String
}
